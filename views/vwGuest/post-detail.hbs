<div class="container-xl my-5">
    <!-- Article Section -->
    <article class="mb-5">
        <!-- Title -->
        <h1 class="h1 text-center font-weight-bold mb-4">{{post.title}}</h1>

        <!-- Abstract Box -->
        <div class="p-4 bg-light border rounded shadow-sm mb-4">
            <p class="mb-0">{{post.abstract}}</p>
        </div>

        <!-- Main Image -->
        <div class="text-center mb-4">
            <img src="/public/posts/imgs/{{post.id}}/thumbnail.jpg" class="img-fluid rounded shadow" alt="Main Image">
        </div>

        <!-- Main Content -->
        <div class="container-fluid mb-4">
            {{{post.content}}}
        </div>

        <div class="container-fluid mb-4">
            <div class="row mb-2">
                <div class="col-12">
                    <p>
                        Thể loại:
                        <a href="/category/{{category.id}}/view" class="text-primary text-decoration-none">{{category.name}}</a>
                    </p>
                </div>
            </div>
        </div>

        <!-- Metadata -->
        <div class="container text-muted mb-4">
            <div class="row">
                <!-- Left Section -->
                <div class="col-md-6">
                    <!-- Views -->
                    <div class="row mb-2">
                        <div class="col-12">
                            <p>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                </svg>
                                &nbsp;
                                Đã xem: {{post.views}}
                            </p>
                        </div>
                    </div>
                    <!-- Likes -->
                    <div class="row mb-2">
                        <div class="col-12">
                            <p>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
                                </svg>
                                &nbsp;Đã thích: {{post.likes}}
                            </p>
<!--                            <form action="/home/post/like/{{post.id}}" method="POST" id="like-form">-->
<!--                                <button style="all: unset;" type="submit">-->
<!--                                    <a class='like-button text-decoration-none'>-->
<!--                                        <span class='like-icon'>-->
<!--                                            <div class='heart-animation-1'></div>-->
<!--                                            <div class='heart-animation-2'></div>-->
<!--                                        </span>-->
<!--                                        Thích-->
<!--                                    </a>-->
<!--                                </button>-->
<!--                            </form>-->
                        </div>
                    </div>
                </div>

                <!-- Right Section -->
                <div class="col-md-6 text-right">
                    <!-- Author -->
                    <div class="row mb-2">
                        <div class="col-12">
                            <p>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                                </svg>
                                &nbsp;Đăng bởi: <strong>{{author.penName}}</strong>
                            </p>
                        </div>
                    </div>
                    <!-- Publish Date -->
                    <div class="row mb-2">
                        <div class="col-12">
                            <p>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
                                    <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"/>
                                </svg>
                                &nbsp;Đăng vào: {{post.publish_date}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tag Section -->
        <div class="container-fluid mb-4">
            <div class="row mb-2">
                <div class="col-12">
                    <p>
                        Tags:
                        {{#each post.tags}}
                            <span class="badge badge-info mr-2">{{this.name}}</span>
                        {{/each}}
                    </p>
                </div>
            </div>
        </div>


    </article>

    <!-- Comment Section -->
    <h3 class="mb-3 font-weight-bold">Viết bình luận</h3>
    <div class="card shadow-sm mb-5">
        <div class="card-body">
            <form action="/post/{{post.id}}/comment" method="POST" id="comment-form">
                <div class="form-group mb-3">
                    <label for="content" class="form-label font-weight-bold">Nội dung</label>
                    <textarea id="content" name="content" class="form-control" rows="3" placeholder="Viết bình luận của bạn..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Bình luận</button>
            </form>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center">
        <a href="/home" class="btn btn-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
            </svg>&nbsp;
            Back to Post List</a>
    </div>
</div>

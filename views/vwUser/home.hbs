<main class="container-fluid">
    <hr class="mt-3 mb-0">
    <div>
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active" href="{{#if user}}/main{{else}}/home{{/if}}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
                        <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5"/>
                    </svg>
                </a>
            </li>
            {{#each categories}}
                <li class="nav-item dropdown">
                    <a class="nav-link" href="{{#if ../user}}/main/category/{{this.id}}{{else}}/home/category/{{this.id}}{{/if}}" id="category{{this.id}}">{{this.name}}</a>
                    <div class="dropdown-menu" aria-labelledby="category{{this.id}}">
                        {{#each this.children}}
                            <a class="dropdown-item" href="{{#if ../../user}}/main/category/{{this.id}}{{else}}/home/category/{{this.id}}{{/if}}" id="category{{this.id}}">{{this.name}}</a>
                        {{/each}}
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    <hr class="mt-0 mb-3">
    <div id="container" class="row d-flex justify-content-center">
        <div id="main-news" class="col-md-9">
            <div class="container mt-4">
                <h4 class="mb-3 text-primary">Tin nổi bật</h4>
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div id="featured-news" class="carousel-inner">
                        {{#each highlightedPosts}}
                            <div class="carousel-item {{#if @first}}active{{/if}}">
                                <div class="card">
                                    <div class="row no-gutters">
                                        <div class="col-md-4">
                                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}">
                                                <img src="/public/posts/imgs/{{this.id}}/thumbnail.jpg" class="img-fluid rounded-left" style="height: 100%; object-fit: cover;" alt="{{this.title}}">
                                            </a>
                                        </div>
                                        <div class="col-md-8 p-4 no-gutters d-flex flex-column">
                                            <h2 class="card-title">
                                                <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none">
                                                    {{this.title}}
                                                </a>
                                            </h2>
                                            <a href="{{#if ../user}}/main/category/{{this.categoryId}}{{else}}/home/category/{{this.categoryId}}{{/if}}" class="text-decoration-none text-dark">
                                                <p class="card-text">{{this.category_name}}</p>
                                            </a>
                                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                                <p class="card-text truncate-2-line w-100">
                                                    {{this.abstract}}
                                                </p>
                                                <p class="card-text"><small class="text-muted">Ngày đăng: {{this.publish_date}}</small></p>
                                            </a>
                                            <div class="row pt-4">
                                                {{#if ../user}}
                                                    <div class="col-md-2 d-flex align-items-center justify-content-center">
                                                        <form action="/main/post/like/{{this.id}}" method="POST" id="like-form">
                                                            <button style="all: unset;" type="submit">
                                                                <a class='like-button text-decoration-none'>
                                                                <span class='like-icon'>
                                                                    <div class='heart-animation-1'></div>
                                                                    <div class='heart-animation-2'></div>
                                                                </span>
                                                                    Thích
                                                                </a>
                                                            </button>
                                                        </form>
                                                    </div>
                                                {{/if}}
                                                <div class="col-md-2 d-flex align-items-center justify-content-center">
                                                    <p class="card-text text-center">Likes: {{this.likes}}</p>
                                                </div>
                                                <div class="col d-flex align-items-end flex-column justify-content-center">
                                                    <p class="card-text">Lượt xem: {{this.views}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </button>
                </div>
            </div>

            {{#each topCategories}}
                <div class="container mt-4">
                    <h4 class="mb-3 text-primary">
                        <a href="#" class="text-decoration-none">
                            {{@key}}
                        </a>
                    </h4>
                    {{#if (ifCond (length this) ">=" 2)}}
                        <div class="row vertical-divider">
                            {{#with this.[0]}}
                                <div class="col-md-8">
                                    <div class="card border-0">
                                        <a href="{{#if ../../user}}/main/post/{{post_id}}{{else}}/home/post/{{post_id}}{{/if}}">
                                            <img src="/public/posts/imgs/{{post_id}}/thumbnail.jpg" class="card-img-top" alt="Main Image">
                                        </a>
                                        <div class="card-body p-0 mt-2">
                                            <a href="{{#if ../../user}}/main/post/{{post_id}}{{else}}/home/post/{{post_id}}{{/if}}" class="text-decoration-none text-dark">
                                                <h5 class="font-weight-bold">{{title}}:
                                                    <span class="font-italic">{{abstract}}</span>
                                                </h5>
                                            </a>
                                            <p class="text-muted">{{publish_date}}</p>
                                        </div>
                                    </div>
                                </div>
                            {{/with}}

                            <div class="col-md-4">
                                {{#each this}}
                                    {{#unless @first}}
                                        <div class="mb-3">
                                            <img src="/public/posts/imgs/{{post_id}}/thumbnail.jpg" class="img-fluid rounded" alt="/public/posts/imgs/{{id}}/thumbnail.jpg">
                                            <a href="{{#if ../../user}}/main/post/{{post_id}}{{else}}/home/post/{{post_id}}{{/if}}" class="text-decoration-none text-dark">
                                                <h5 class="font-weight-bold">{{title}}:
                                                    <span class="font-italic">{{abstract}}</span>
                                                </h5>
                                            </a>
                                            <p class="text-muted">{{publish_date}}</p>
                                        </div>
                                    {{/unless}}
                                {{/each}}
                            </div>
                        </div>
                    {{else}}
                        <div class="row">
                            {{#each this}}
                                <div class="col">
                                    <div class="card mb-3">
                                        <a href="{{#if ../user}}/main/post/{{post_id}}{{else}}/home/post/{{post_id}}{{/if}}">
                                            <img src="/public/posts/imgs/{{post_id}}/thumbnail.jpg" alt="..." width="100%" height="100%" class="img-fluid rounded-top">
                                        </a>
                                        <div class="card-body">
                                            <a href="{{#if ../user}}/main/post/{{post_id}}{{else}}/home/post/{{post_id}}{{/if}}" class="text-decoration-none text-dark">
                                                <h5 class="font-weight-bold">{{title}}:
                                                    <span class="font-italic">{{abstract}}</span>
                                                </h5>
                                            </a>
                                            <p class="card-text"><small class="text-muted">{{publish_date}}</small></p>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/if}}
                </div>
            {{/each}}


        </div>

        <div id="sidebar-news" class="col-md-3">
            <div class="container mt-4">
                <div id="sidebar-header">
                    <div class="slider bg-primary" id="slider"></div>
                    <div class="button active" id="latest">
                        Tin mới nhất
                    </div>
                    <div class="button inactive" id="most-views">
                        Xem nhiều
                    </div>
                </div>
                <div id="latest-news" style="display: block">
                    {{#each latestPosts}}
                        <div class="card mb-3">
                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}">
                                <img src="/public/posts/imgs/{{this.id}}/thumbnail.jpg" alt="..."
                                     width="100%" height="100%" class="img-fluid card-img-top">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                        {{this.title}}
                                    </a>
                                </h5>
                                <a href="{{#if ../user}}/main/category/{{this.categoryId}}{{else}}/home/category/{{this.categoryId}}{{/if}}" class="text-decoration-none text-dark">
                                    <p class="card-text">{{this.category_name}}</p>
                                </a>
                                <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                    <p class="card-text truncate-multi-line w-100">
                                        {{this.abstract}}
                                    </p>
                                </a>
                                <p class="card-text"><small class="text-muted">Ngày đăng: {{this.publish_date}}</small></p>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <div id="most-views-news" style="display: none">
                    {{#each mostViewPosts}}
                        <div class="card mb-3">
                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}">
                                <img src="/public/posts/imgs/{{this.id}}/thumbnail.jpg" alt="..."
                                     width="100%" height="100%" class="img-fluid card-img-top">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                        {{this.title}}
                                    </a>
                                </h5>
                                <a href="{{#if ../user}}/main/category/{{this.categoryId}}{{else}}/home/category/{{this.categoryId}}{{/if}}" class="text-decoration-none text-dark">
                                    <p class="card-text">{{this.category_name}}</p>
                                </a>
                                <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                    <p class="card-text truncate-multi-line w-100">
                                        {{this.abstract}}
                                    </p>
                                </a>
                                <p class="card-text"><small class="text-muted">Ngày đăng: {{this.publish_date}}</small></p>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>

<main class="container-fluid">
    <hr class="mt-3 mb-0">
    <div>
        <!-- Danh mục hiển thị theo dạng điều hướng -->
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active" href="{{#if user}}/main{{else}}/home{{/if}}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
                        <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5"/>
                    </svg>
                </a>
            </li>
            {{#each categories}}
                <li class="nav-item dropdown">
                    <a class="nav-link" href="{{#if ../user}}/main/category/{{this.id}}{{else}}/home/category/{{this.id}}{{/if}}" id="category{{this.id}}">{{this.name}}</a>
                    <div class="dropdown-menu" aria-labelledby="category{{this.id}}">
                        {{#each this.children}}
                            <a class="dropdown-item" href="{{#if ../../user}}/main/category/{{this.id}}{{else}}/home/category/{{this.id}}{{/if}}" id="category{{this.id}}">{{this.name}}</a>
                        {{/each}}
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    <hr class="mt-0 mb-3">

    <!-- Hiển thị bài viết theo danh mục -->
    <div id="container" class="row d-flex justify-content-center">
        <div id="main-news" class="col-md-9">
            <div class="container mt-4">
                <h4 class="mb-3 text-primary">Bài viết thuộc danh mục</h4>
                {{#if posts.length}}
                    <div class="row">
                        {{#each posts}}
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}">
                                        <img src="/public/posts/imgs/{{this.id}}/thumbnail.jpg" class="card-img-top" alt="{{this.title}}">
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                                {{this.title}}
                                            </a>
                                        </h5>
                                        <p class="card-text truncate-multi-line">{{this.abstract}}</p>
                                        <p class="card-text"><small class="text-muted">Ngày đăng: {{this.publish_date}}</small></p>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <p class="text-muted">Không có bài viết nào trong danh mục này.</p>
                {{/if}}
            </div>
        </div>

        <!-- Sidebar hiển thị danh mục hoặc bài viết nổi bật -->
        <div id="sidebar-news" class="col-md-3">
            <div class="container mt-4">
                <h5 class="text-primary">Tin nổi bật</h5>
                {{#each hotPosts}}
                    <div class="card mb-3">
                        <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}">
                            <img src="/public/posts/imgs/{{this.id}}/thumbnail.jpg" alt="{{this.title}}" class="card-img-top">
                        </a>
                        <div class="card-body">
                            <h6 class="card-title">
                                <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                    {{this.title}}
                                </a>
                            </h6>
                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                <p class="card-text truncate-multi-line w-100">
                                    {{this.abstract}}
                                </p>
                            </a>
                            <p class="card-text"><small class="text-muted">Lượt xem: {{this.views}}</small></p>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>

<div class="container my-5">
    <!-- Tab navigation with Flexbox to spread tabs evenly -->
    <ul class="nav nav-pills nav-fill" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pills-home-tab" data-toggle="pill" data-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Đã duyệt và chờ xuất bản</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-profile-tab" data-toggle="pill" data-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Đã đăng</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-contact-tab" data-toggle="pill" data-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Bị từ chối</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-pending-tab" data-toggle="pill" data-target="#pills-pending" type="button" role="tab" aria-controls="pills-pending" aria-selected="false">Chờ duyệt</button>
        </li>
    </ul>

    <!-- Tab content -->
    <div class="tab-content" id="pills-tabContent">
        {{#each articles}}
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="list-group">
                {{#each published}}
                    {{#if (eq statusName 'Published')}}
                        <div class="list-group-item d-flex align-items-center">
                            <img src="/public/posts/imgs/{{id}}/thumbnail.jpg" alt="Article thumbnail" class="rounded mr-3" style="width: 60px; height: 60px;">
                            <div class="flex-grow-1">
                                <h5 class="mb-1">{{title}}</h5>
                                <p class="mb-1">{{statusName}}</p>
                                <p class="mb-0">Ngày đăng: {{#if publish_date}}{{publish_date}}{{else}}No{{/if}}</p>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>

        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
            <div class="list-group">
                {{#each approved}}
                    {{#if (eq statusName 'Approved')}}
                        <div class="list-group-item d-flex align-items-center">
                            <img src="/public/posts/imgs/{{id}}/thumbnail.jpg" alt="Article thumbnail" class="rounded mr-3" style="width: 60px; height: 60px;">
                            <div class="flex-grow-1">
                                <h5 class="mb-1">{{title}}</h5>
                                <p class="mb-1">{{statusName}}</p>
                                <p class="mb-0">Lần cuối sửa: {{#if updated_at}}{{updated_at}}{{else}}No{{/if}}</p>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>

        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
            <div class="list-group">
                {{#each rejected}}
                    {{#if (eq statusName 'Rejected' statusFilter)}}
                        <div class="list-group-item d-flex align-items-center">
                            <img src="/public/posts/imgs/{{id}}/thumbnail.jpg" alt="Article thumbnail" class="rounded mr-3" style="width: 60px; height: 60px;">
                            <div class="flex-grow-1">
                                <h5 class="mb-1">{{title}}</h5>
                                <p class="mb-1">{{statusName}}</p>
                                <p class="mb-0">Lần cuối sửa: {{#if updated_at}}{{updated_at}}{{else}}No{{/if}}</p>
                            </div>
                        </div>
                        <div class="ml-3">
                            <a href="/writer/refuse-article?id={{id}}" class="btn btn-outline-danger btn-sm">Xem lý do</a>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>

        <div class="tab-pane fade" id="pills-pending" role="tabpanel" aria-labelledby="pills-pending-tab">
            <div class="list-group">
                {{#each pending}}
                    {{#if (eq statusName 'Pending-Approval' statusFilter)}}
                        <a href="/writer/fix-article?id={{id}}" class="text-decoration-none">
                        <div class="list-group-item d-flex align-items-center">
                            <img src="/public/posts/imgs/{{id}}/thumbnail.jpg" alt="Article thumbnail" class="rounded mr-3" style="width: 60px; height: 60px;">
                            <div class="flex-grow-1">
                                <h5 class="mb-1">{{title}}</h5>
                                <p class="mb-1">{{statusName}}</p>
                                <p class="mb-0">Lần cuối sửa: {{#if updated_at}}{{updated_at}}{{else}}No{{/if}}</p>
                            </div>
                        </div>
                        </a>
                    {{/if}}
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
</div>

